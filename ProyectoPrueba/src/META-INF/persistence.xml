<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="prueba_UP" transaction-type="JTA">
		<description>Ejemplo de configuración de JPA con Hibernate y un DataSource gestionado con Glassfish</description>
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>jdbc/tiw</jta-data-source>
		<class>es.uc3m.tiw.dominio.Usuario</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
			<!-- la siguiente propiedad hace que se pueda actualizar las tablas automáticamente
			si se realiza algún cambio en la clase Usuario, los valores posibles pueden verse aquí:
			http://stackoverflow.com/questions/438146/hibernate-question-hbm2ddl-auto-possible-values-and-what-they-do -->
			<property name="hibernate.hbm2ddl.auto" value="update"/>
			<property name="hibernate.show_sql" value="true"/>
		</properties>
	</persistence-unit>
</persistence>
